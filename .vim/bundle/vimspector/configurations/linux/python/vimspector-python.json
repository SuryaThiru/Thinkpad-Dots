{
    "configurations": {
        "Python": {
            "adapter": "debugpy",
            "filetypes": [ "python" ],
            "default": true,
            "variables": {
              "PYTHON": {
                "shell": "/bin/sh -c 'if [ -z \"${dollar}VIRTUAL_ENV\" ]; then echo $$(which python3); else echo \"${dollar}VIRTUAL_ENV/bin/python\"; fi'"
              }
            },
            "configuration": {
                "request": "launch",
                "program": "${file}",
                "python": "$PYTHON",
                "cwd": "${workspaceRoot}"
            },
            "breakpoints": {
              "exception": {
                "caught": "N",
                "uncaught": "Y",
                "raised": "N",
                "userUnhandled": "N"
              }
          }
        }
    }
}

